<% if sales.count != 0 %>
  <div class="ui segment">
    <% if successful %>
      <h3>Successful sales:</h3>
    <% else %>
      <h3> Unsuccessful sales:</h3>
    <% end %>
      <div class="ui large feed">
        <% sales.each do |sale| %>
          <div class="event">
            <div class="label">
              <img class="ui fluid rounded image" src="<%= url_for(sale.img) if sale.img.attached? %>">
            </div>
            <div class="content">
              <div class="summary">
                <% if  successful %>
                <%= link_to sale.owner.username, sale.owner %> won sale for <%= link_to sale.name, sale %>
                <div class="date">
                  on <%= sale.get_closing_date %>
                </div>
                <% else %>
                Sale for <%= link_to sale.name, sale %> closed with no bids
                <div class="date">
                  on <%= sale.get_closing_date %>
                </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
  </div>
<% end %>
