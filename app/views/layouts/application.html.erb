<!DOCTYPE html>
<html>
  <head>
    <title>RailsAuctionProjectMode</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p id="notice"><%= notice %></p>
    <nav class="navbar" style="text-align: center; float: right; width: auto;">
      <% if logged_in? %>
        <%= button_to "Home", root_path, method: "get" %>
        ----------
        <%= button_to "My Profile", current_user, method: "get" %>
        ----------
        <%= button_to "Sell", new_sale_path, method: "get" %>
        ----------
        <%= button_to "Log Out", logout_path, method: "get" %>
        ----------
        <br>Logged in as <%= current_user.username %>.
      <% else %>
        <%= button_to "Sign Up", signup_path, method: "get" %>
        ----------
        <%= button_to "Log In", login_path, method: "get" %>
      <% end %>
    </nav>
    <%= yield %>
  </body>

</html>
