<div class="ui grid">
  <div class="eight wide centered column">
    <div class="ui segments">


    <div class="ui segment">
      <h3> Your store's total revenue: $<%=@user.get_total_revenue %></h3>
    </div>
    <% if @popular %>
    <div class="ui segment">
      <h3> Most popular sale: </h3>
      <%=link_to @popular.name, @popular %> for <%= @popular.current_asking_price%> </p>
    </div>
    <% end %>
    <div class="ui segment">

    </div>
    </div>
  </div>

<div class="four wide centered column">


  <p> Unsuccessful Sales: </p>

  <div class="ui feed">
   <% @user.get_unsuccessful_sales.each do |sale| %>
     <div class="event">


      <div class="label">
        <img class="ui fluid rounded image" src="<%= url_for(sale.img) if sale.img.attached?%>">
      </div>
    <div class="content">
      <div class="summary">
      Sale for <%= link_to sale.name, sale %> closed with no bids
        <div class="date">
          on <%= sale.get_closing_date %>
        </div>
      </div>
    </div>
    </div>
    <% end %>
  </div>
  </div>


</div>
