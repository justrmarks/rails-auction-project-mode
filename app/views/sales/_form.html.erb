<% if sale.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% sale.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


<%=form_with(model: sale) do |f| %>
  <div class="field item">
    <%= f.label "Image"%>
    <%= f.file_field :img %>
  </div>
  
  <div class="field item">
    <%= f.label :name, {class: "ui label"}%>
    <%= f.text_field :name, {class: "ui labeled input"} %>
  </div>

  <div class="field item">
    <%= f.label :description, {class: "ui label"} %>
    <%= f.text_area :description, {class: "ui labeled input"} %>
  </div>

  <div class="field item">
    <%= f.label :price, "Starting bid", {class: "ui label"} %>
    <%= f.number_field :price, {class: "ui labeled input"} %>
  </div>


  <div class="field item">
    <%= f.label :closing_date, {class: "ui label"} %>
    <%= f.datetime_select :closing_date, prompt: true, start_year: Date.today.year, selected: Time.zone.now, end_year: Date.today.year + 2, ampm: true%>
  </div>

  <%= f.submit class: "ui teal button"%>

<% end %>
