<h1>ThePirateBay</h1>
<% @sales.each do |sale| %>
  <p>
    <%= link_to sale.name, sale %> for $<%= sale.current_asking_price %> <br>
    posted by: <%= link_to sale.seller.username, sale.seller %>
    <% if logged_in? %>
      <%= form_with model: @bid, url: create_bid_path do |f| %>
        <div class="action">
          <%= f.select :amount, ["25","50", "75", "100"]%>
          <%= f.hidden_field :sale_id, value: sale.id %> 
          <%= f.submit "Bid"%>
        </div>
      <% end %>
    <% end %>
  </p>
<% end %>

